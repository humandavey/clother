generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum ClothingType {
  HAT
  SHIRT
  OVERSHIRT
  JACKET
  WATCH
  BELT
  SHORTS
  PANTS
  SOCKS
  SHOES
}

enum AccountType {
  MAX
  PRO
  DEFAULT
}

model User {
  id           String  @id @default(uuid())
  name         String
  accountType  AccountType @default(DEFAULT)
  
  clothing Clothing[]
}

model Clothing {
  id           String  @id @default(uuid())
  name         String
  type         ClothingType
  description  String
  imageUrl     String

  userId  String
  user    User    @relation(fields: [userId], references: [id])
}
